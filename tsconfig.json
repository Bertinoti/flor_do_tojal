{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src",
        "src/**/*.d.ts",
        "global.d.ts"
    ]
}